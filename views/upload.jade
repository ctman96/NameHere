extends layout
block title
  title Upload

block content
  meta(charset='utf-8')
  title HTML5 File Drag and Drop Upload with jQuery and PHP | Tutorialzine Demo
  // Our CSS stylesheet file
  link(rel='stylesheet', href='stylesheets/upload.css')
  //if lt IE 9
  script(src='http://html5shiv.googlecode.com/svn/trunk/html5.js')
  header
    h1 HTML5 File Upload with jQuery and PHP
  #dropbox
    span.message
      | Drop your comic strips here to upload.
      br
      i When done, press upload.

  footer
    a.tzine(href='/')
  // Including The jQuery Library
  script(src='http://code.jquery.com/jquery-1.6.3.min.js')
  // Including the HTML5 Uploader plugin
  script(src='js/jquery.filedrop.js')
  // The main script file
  script(src='js/script.js')
